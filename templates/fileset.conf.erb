FileSet {
  Name = "<%= name %>"
  Include {
    Options {
      Signature   = SHA1
      Compression = GZIP
    }

<% if @include_files.kind_of? Array -%>
<% include_files.each do |file_include| -%>
    File = <%= file_include %>
<% end -%>
<% else -%>
    File = <%= include_files %>
<% end -%>

  }

<% if @exclude_files -%>
  Exclude {
<% exclude_files.each do |file_exclude| -%>
    File = <%= file_exclude %>
<% end -%>
  }
<% end -%>
}
